{
  "name": "react-input-currency",
  "version": "1.0.0",
  "description": "React Input Component for currencies mask",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Leonardo Dias",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "tsc -w",
    "format": "prettier --write \"src/**/*.ts\" \"lib/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare" : "yarn build",
    "prepublishOnly" : "yarn lint",
    "preversion" : "yarn lint",
    "version" : "yarn format && git add -A src",
    "postversion" : "git push && git push --tags"
  },
  "dependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.1",
    "prettier": "^2.8.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.4"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "currency",
    "mask",
    "brl",
    "input",
    "money"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leoreisdias/ReactInputCurrency.git"
  },
  "homepage": "https://github.com/leoreisdias/ReactInputCurrency#readme",
  "bugs": {
    "url": "https://github.com/leoreisdias/ReactInputCurrency/issues"
  }
